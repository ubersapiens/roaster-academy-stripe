.course-nav-wrapper
  .wrapper-inside.clearfix
    %ul.course-nav-list
      - @courses.each do |course|
        %li{class: "#{"active" if params["course_id"].to_i== course.id}"}
          = link_to new_registration_path(course_id: course.id), class: "ruby" do
            .course-name
              = course.name

            %button.btn{style: "margin-top: 1em;color: white;background: #F89406;"} Register ($#{course.price})